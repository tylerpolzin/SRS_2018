<% @title = "SRS Portal | Edit #{@product.model_select}" %>
<div class="defaultDiv" id="editProductDiv">
  <p class="defaultDivHeader">
    <span class="show-product-brand-name"><%= @product.brand_name %> - <%= @product.description %></span></br>
    <span class="show-product-description" style="font-size:0.8em">Entry Created: <%= @product.created_at.strftime('%B %d, %Y') %> | Last Modified: <%= @product.updated_at.strftime('%B %d, %Y') %></span>
  </p>
  <div class="container defaultForm">
    <%= bootstrap_form_for @product, url: product_path, method: :patch, :html => { :multipart => true } do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %> <!-- if @product.errors.any? -->
      <ul class="nav nav-tabs">
        <li class="active"><a id="editProductForm" href="#edit-product-form" class="tab-background" data-toggle="tab"><i class="fa fa-user"></i> Edit Product Details</a></li>
        <li><a id="editProductAdditions" href="#edit-product-additions" class="tab-background" data-toggle="tab"><i class="fa fa-user"></i> Edit Custom Attributes</a></li>
        <!--<li><a id="editProductUploads" href="#edit-product-uploads" class="tab-background" data-toggle="tab"><i class="fa fa-file-pdf-o"></i> Edit Associated Files</a></li>-->
      </ul>
      <div class="defaultTabs">
        <div class="tab-content">
          <div id="edit-product-form" class="tab-pane fade in active container">
            <br/><%= render "form", :f => f %>
          </div>
          <div id="edit-product-additions" class="tab-pane fade container">
            <br/><%= render "additions", :f => f %>
          </div>
          <!--<div id="edit-product-uploads" class="tab-pane fade"><br/>-->
          <!--  <p><%#= add_child_link " Add File", :uploads %></p>-->
          <!--  <%#= new_child_fields_template f, :uploads %>-->
          <!--</div>-->
        </div>
      </div>
      <%= f.submit "Update Product", :style => "float:right;" %>
    <% end %>
    <%= button_to "Delete", product_path(:id => params[:id]), :method => :delete, class: 'hidden productDelete' %>
    <button class="btn btn-sm btn-danger delete-button deleteProduct bootbox-confirm">Delete This Product</button>
  </div>
</div>