            <% end %>
          </td>
        </tr>
        <tr>
          <td>UPC #</td>
          <td>
            <% if part.upc.present? %>
              <%= part.upc %>
            <% else %>
              N/A
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Brand Name</td>
