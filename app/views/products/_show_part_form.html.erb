  <% @parts.each do |part| %>
    <table class="table table-bordered showProductPartTable" id="part-number-<%= part.id %>">
      <thead></thead>
      <tbody>
        <tr>
          <td colspan="2">
            <div>
              <%= link_to "Go To Part Page", part_path(part), method: :get, class: "btn btn-sm", :style => "margin-right:5px;" %>
              <% if current_user.admin? or current_user.has_role? :employee %>
                <%= link_to "Edit This Part", edit_part_path(id: part), method: :get, class: 'btn btn-sm' %>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td>Manufacturer</td>
          <td>
            <% if part.product.vendor_name.present? %>
              <%= part.product.vendor_name %>
            <% else %>
