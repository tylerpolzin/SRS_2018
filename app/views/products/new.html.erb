<% @title = "SRS Portal | Create New Product" %>
<div class="defaultDiv" id="newProductDiv">
  <p class="defaultDivHeader">Create New Product</p>
  <div class="container defaultForm">
    <%= bootstrap_form_for @product, url: products_path, method: :post, :html => { :class => :form, :multipart => true } do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being created:</h2>
          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <ul class="nav nav-tabs">
        <li class="active"><a id="newProductNavTab" href="#new-product-form" class="tab-background" data-toggle="tab"><i class="fa fa-user"></i> Product Details</a></li>
        <li><a id="newProductAdditions" href="#new-product-additions" class="tab-background" data-toggle="tab"><i class="fa fa-user"></i> Custom Attributes</a></li>
        <!--<li><a id="newProductUploads" href="#new-product-uploads" class="tab-background" data-toggle="tab"><i class="fa fa-file-pdf-o"></i> Associated Files</a></li>-->
        <!--<li><a id="newPartForm" href="#new-part-form" class="tab-background" data-toggle="tab"><i class="fa fa-user"></i> Associated Parts</a></li>-->
      </ul>
      <div class="defaultTabs">
        <div class="tab-content">
          <div id="new-product-form" class="tab-pane fade in active container">
            <br/><%= render "form", :f => f %>
          </div>
          <div id="new-product-additions" class="tab-pane fade container">
            <br/><%= render "additions", :f => f %>
          </div>
          <!--<div id="new-product-uploads" class="tab-pane fade"><br/>-->
          <!--  <p><%#= add_child_link " Add File", :uploads %></p>-->
          <!--  <%#= new_child_fields_template f, :uploads %>-->
          <!--</div>-->
          <!--<div id="new-part-form" class="tab-pane fade">-->
          <!--  <p><%#= add_child_link " Add Part", :parts %></p>-->
          <!--  <%#= new_child_fields_template f, :parts %>-->
          <!--</div>-->
        </div>
      </div>
      <%= f.submit "Create Product", :style => "float:right;" %>
    <% end %>
  </div>
</div>