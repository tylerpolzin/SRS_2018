<div class="task_attributes">
  <div class="attributes_header">
    <span class="attributes_title">Custom Attributes</span>
    <span class="task_attributes_remove_button"><i class="fa fa-close"></i></span>
  </div>
  <div class="orderAttributeTopBorder"></div>
  <table class="table orderAttributeContainer">
    <thead></thead>
    <tbody class="body">
      <%= f.fields_for_without_bootstrap :details, @task.details do |d| %>
        <%= hidden_field_tag "task[details]", nil, class: "hide-tag" %>
        <% @task.details.try(:each) do |key, value| %>
            <tr class="row new_row">
              <td>
                <%= text_field_tag key, key, :class => 'text_field taskDynamicAttributeName form-control', required: true %>
              </td>
              <td>
                <%= d.text_field_without_bootstrap key, :class => 'text_field form-control', :value => value %>
              </td>
              <td>
                <a class="taskRemoveAttributeRow"><i class="fa fa-close"></i></a>
              </td>
            </tr>
        <% end %>
      <%- end -%>
      <tr class='row taskAttributeTemplate hide'>
        <td>
          <input class="text_field taskDynamicAttributeName form-control" id="" name="" placeholder="New Attribute Name" type="text"/>
        </td>
        <td>
          <input class="text_field form-control" id="" name="" placeholder="Description" type="text"/>
        </td>
        <td class="taskRemoveAttributeRow"><i class="fa fa-close"></i></td>
      </tr>
    </tbody>
  </table>
  <div class="taskAttributeBottomBorder"></div>
</div>