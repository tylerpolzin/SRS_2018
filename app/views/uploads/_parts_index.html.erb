<div class="partUploadsTable">
  <table id="partUploadsDataTable" class="display" style="width:100%;">
    <thead>
      <tr>
        <th>Part ID</th>
        <th>Part Description</th>
        <th>File Name</th>
        <th>File Type</th>
        <th>Original File Size</th>
        <th>Created At</th>
        <th>Last Modified At</th>
      </tr>
    </thead>
    <tbody class="part-uploads-table">
      <% @parts.each do |part| %>
        <tr>
          <td><%= part.id %></td>
          <td><%= link_to part.part_select_with_model, part_path(part), method: :get, title: "View Part Details (ID: #{part.id})" %></td>
          <td>
            <p><%= link_to part.image.original_filename.upcase, part.image.url, target: "_blank", title: "View Full Size Image", :style => "color:#0f9e2f;" %></p>
            <p><%= link_to "(medium)", part.image.url(:medium), target: "_blank", title: "View Medium Size Image", :style => "color:#f2990f;" %> -- <%= link_to "(small)", part.image.url(:thumb), target: "_blank", title: "View Small Size Image", :style => "color:#5488CF;" %></p>
          </td>
          <td><%= part.image_content_type.upcase %></td>
          <td><%= number_to_human_size(part.image_file_size, precision: 2) %></td>
          <td><%= part.created_at.strftime('%F') %></td>
          <td><%= part.updated_at.strftime('%F') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>