<%= f.fields_for :comments, f.object.comments.order(:id) do |f| %>
  <div class="show_basic_pop_fields">
    <div class="show_basic_pop_header">
      <span class="show_basic_pop_title">Comment</span>
      <span class="customer_comment_edit_remove_button" title="Remove This Comment"><i class="fa fa-close"></i></span>
    </div>
    <table class="table newCommentContainer">
      <tbody>
        <tr>
          <td class="textarea-vertical">
            <%= f.text_area :content, hide_label: true, placeholder: "Enter Comment..." %>
            <%= f.hidden_field :_destroy, value: false, class: "remove_child_customer_edit_comment" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>