<div class="show_basic_pop_fields customer_attributes_container">
  <div class="show_basic_pop_header">
    <span class="show_basic_pop_title">Custom Attributes</span>
    <span class="customer_attributes_remove_button"><i class="fa fa-close"></i></span>
  </div>
  <div class="attributes_top_border"></div>
  <table class="table newCustomerAttributeContainer">
    <thead></thead>
    <tbody class="body">
      <%= f.fields_for_without_bootstrap :details, f.object.details do |d| %>
        <%= hidden_field_tag "customer[details]", nil, class: "hide-tag" %>
        <% f.object.details.try(:each) do |key, value| %>
            <tr class="row">
              <td>
                <%= text_field_tag key, key, :class => 'text_field customerDynamicAttributeName', required: true %>
              </td>
              <td>
                <%= d.text_field_without_bootstrap key, :class => 'text_field description', :value => value %>
              </td>
              <td>
                <a class="customerRemoveAttributeRow"><i class="fa fa-close"></i></a>
              </td>
            </tr>
        <% end %>
      <%- end -%>
      <tr class='row customerAttributeTemplate hide'>
        <td>
          <input class="text_field customerDynamicAttributeName form-control" id="" name="" placeholder="New Attribute Name" type="text"/>
        </td>
        <td>
          <input class="text_field form-control description" id="" name="" placeholder="Description" type="text"/>
        </td>
        <td class="customerRemoveAttributeRow"><i class="fa fa-close"></i></td>
      </tr>
    </tbody>
  </table>
  <div class="attributes_bottom_border"></div>
</div>