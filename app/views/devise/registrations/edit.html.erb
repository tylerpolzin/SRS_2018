<% @title = "SRS Portal | Change Login Information" %>
<div style="width: 400px;" id="editProfileDiv">
  <p class="defaultDivHeader">Update Login Information</p>
  <div class="container defaultForm">
    <%= bootstrap_form_for(resource, as: resource_name, url: user_registration_path, html: { method: :patch }) do |f| %>
      <%= devise_error_messages! %>
      <table class="table table-bordered" id="editProfileTable">
        <thead></thead>
        <tbody>
          <tr>
            <td>Login (Email)</td>
            <td><%= f.email_field :email, autofocus: true, hide_label: true %></td>
          </tr>
          <tr>
            <td>Current Password</td>
            <td><%= f.password_field :current_password, hide_label: true %></td>
          </tr>
          <tr>
            <td>New Password</td>
            <td>
              <%= f.password_field :password, autocomplete: 'off', hide_label: true %>
              <% if @minimum_password_length %>
                <em class="control-label"><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>Confirm Password</td>
            <td><%= f.password_field :password_confirmation, autocomplete: 'off', hide_label: true %></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "Update Password", :style => 'float:right;' %>
    <% end %>
    <p><%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger', :style => 'float:right;padding:2px;margin:-45px 245px -10px 0' %></p>
  </div>
</div>